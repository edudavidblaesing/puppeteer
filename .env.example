# API Key for n8n workflow authentication (REQUIRED)
API_KEY=your-secure-api-key-here

# Server port
PORT=3000

# Telegram notifications (optional)
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=

# Proxy server (optional)
PROXY_SERVER=

# Database connection string
